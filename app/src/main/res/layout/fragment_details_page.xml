<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="poster"
            type="com.example.findmypet_android_ui.model.Poster" />
        <variable
            name="pet"
            type="com.example.findmypet_android_ui.model.Pet" />
        <variable
            name="owner"
            type="com.example.findmypet_android_ui.model.Owner" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.postDetails.PosterViewModel">

        <ImageView
            android:id="@+id/image"
            android:layout_width="216dp"
            android:layout_height="207dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="5dp"
            app:imageUrl="@{poster.pet.imageURL}"
            app:layout_constraintEnd_toStartOf="@+id/contact_number"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/title"
            android:layout_width="279dp"
            android:layout_height="65dp"
            android:layout_marginStart="78dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="54dp"
            android:hint="Title..."
            android:text='@{poster.title}'
            android:textAlignment="textStart"
            android:textColor="#DC1E47"
            android:textSize="23dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image" />

        <TextView
            android:id="@+id/pet_name"
            android:layout_width="162dp"
            android:layout_height="41dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="21dp"
            android:hint="pet name"
            android:text='@{"Name: " + poster.pet.name}'
            android:textAlignment="textStart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.722"
            app:layout_constraintStart_toEndOf="@+id/image"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/contact_number"
            android:layout_width="163dp"
            android:layout_height="44dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="96dp"
            android:layout_marginEnd="12dp"
            android:hint="Contact number"
            android:text='@{"Phone: " + poster.pet.owner.contactNumber}'
            android:textAlignment="textStart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/image"
            app:layout_constraintTop_toBottomOf="@+id/pet_name" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="99dp"
            android:layout_height="34dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="24dp"
            android:hint="Lost Date"
            android:text='@{"Lost Date: " + poster.pet.lostDate}'
            app:layout_constraintEnd_toStartOf="@+id/textView4"
            app:layout_constraintHorizontal_bias="0.019"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="153dp"
            android:layout_height="45dp"
            android:layout_marginStart="11dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="16dp"
            android:hint="pet type"
            android:text='@{"Type: " + poster.pet.type}'
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/image"
            app:layout_constraintTop_toBottomOf="@+id/pet_name" />

        <TextView
            android:id="@+id/pet_age"
            android:layout_width="59dp"
            android:layout_height="38dp"
            android:layout_marginStart="26dp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="83dp"
            android:hint="pet age"
            android:text='@{"Pet Age: " + poster.pet.age}'
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.015"
            app:layout_constraintStart_toEndOf="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/title" />

        <Button
            android:id="@+id/editButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="305dp"
            android:layout_marginTop="452dp"
            android:layout_marginEnd="12dp"
            android:text="Edit"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="61dp"
            android:layout_height="36dp"
            android:layout_marginStart="14dp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="109dp"
            android:hint="Colour"
            android:text='@{"Colour: " + poster.pet.colour}'
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.913"
            app:layout_constraintStart_toEndOf="@+id/pet_age"
            app:layout_constraintTop_toBottomOf="@+id/title" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="84dp"
            android:layout_height="36dp"
            android:layout_marginStart="19dp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="16dp"
            android:hint="lost date"
            android:text='@{"Lost Date: " + poster.pet.lostDate}'
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/title" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="355dp"
            android:layout_height="73dp"
            android:layout_marginStart="93dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="80dp"
            android:hint="Description"
            android:text='@{poster.description}'
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.547"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="116dp"
            android:layout_height="34dp"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="244dp"
            android:hint="Owner Name"
            android:text='@{"Owner: " + poster.pet.owner.name}'
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="137dp"
            android:layout_height="36dp"
            android:layout_marginStart="21dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="136dp"
            android:layout_marginBottom="244dp"
            android:hint="Email Address"
            android:text="@{poster.pet.owner.emailAddress}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/textView11"
            app:layout_constraintTop_toBottomOf="@+id/pet_age"
            app:layout_constraintVertical_bias="1.0" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>